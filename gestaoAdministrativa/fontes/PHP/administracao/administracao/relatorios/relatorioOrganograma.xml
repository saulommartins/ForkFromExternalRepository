        titulo        = "Relatório de Organograma"
        subtitulo     = ""
        assunto       = "Relatório de Centro de Custo"
        palavrasChave = "Centro Custo Configuração"
        >
        <margens
            margemSup = "15"
            margemDir = "2"
            margemEsq = "10"/>
    </propriedades>

    <corpo>
        <grupo nome="principal">
            <cabecalho>
                <etiqueta altura="5" largura="30" titulo="Código - Descrição" borda="1" cordefundo="220,220,220" />
                <quebralinha />
            </cabecalho>
            <detalhe >
                <campo altura="5" largura="30" nome="orgao" />
